<%= render 'shared/navbar' %>

<div class="container">
  <div class ="row justify-content-center">
    <div class="col-xs-12, col-sm-10 col-lg-6">
      <h1>Add a new item</h1>

      <%= simple_form_for(@item) do |f| %>
        <%= f.input :name %>
        <%= f.input :price %>
        <%= f.input :number %>
        <%= f.button :submit, "Add an item", class: "btn-warning" %>
      <% end %>

    </div>
  </div>
  <%= link_to "back" , items_path, class: "btn btn-light"  %>
</div>

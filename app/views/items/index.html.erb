<%= render 'shared/navbar' %>
<div class="container">
    <div class="row">
      <div class="col-12 col-sm-10 col-md-8">
        <div class="index-title m-3">
          <h1>All items</h1>
          <%= link_to "Add item", new_item_path, class: 'btn btn-warning'  %>
        </div>
      </div>
    </div>

  <div class="items">
  <div class="row">
    <div class="col-6 col-sm-4 col-md-3">
      <% @items.each do |item| %>
        <div class="item-card">
          <p><%= item.name %></p>
          <p><%= item.number %></p>
          <p><%= item.price %></p>
        </div>
      <% end %>
    </div>
  </div>
  </div>
</div>

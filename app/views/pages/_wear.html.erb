<div class="theme wear">
  <div class="title">
    <h1 class="main-title">Wear</h1>
    <h5 class="sub-title">THE BEST SOUVENIOR SELECTED BY YUKAKO</h2>
  </div>

  <div class="content">
    <div class="category-name">
      <p>ACCESSORIES</p>
    </div>

    <div class="items row">
      <% @items.each do |item| %>
        <div class="col-12 col-sm-6 col-lg-4">
          <%= link_to "https://chakichakijp.thebase.in/items/#{item.number}" do  %>
            <div class="wear-item-card">
              <% if item.photo.attached? %>
                <%= cl_image_tag item.photo.key, alt: item.name, crop: "fill"%>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="category-name">
      <p>KIMONO</p>
    </div>

  </div>

</div>
